<monitors version="2">
  <configuration>
    <logicalmonitor>
      <x>0</x>
      <y>0</y>
      <scale>1</scale>
      <primary>yes</primary>
      <monitor>
        <monitorspec>
          <connector>Virtual-1</connector>
          <vendor>unknown</vendor>
          <product>unknown</product>
          <serial>unknown</serial>
        </monitorspec>
        <mode>
          <width>{{ width }}</width>
          <height>{{ height }}</height>
          <rate>{{ refresh_rate }}</rate>
        </mode>
      </monitor>
    </logicalmonitor>
  </configuration>
</monitors>
